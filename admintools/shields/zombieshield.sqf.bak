if (isNil "ShieldMe") then {ShieldMe = false; ZombieDistanceStat=false;};if(!ShieldMe) then {	zombieDistanceScreen = 	[		["",true],		["Distance", [-1], "", -5, [["expression", "ZombieDistanceStat=false;ShieldMe=false;"]], "1", "1"],		["10", [2], "", -5, [["expression", "ZombieDistance=10;ZombieDistanceStat=true;ShieldMe=true;"]], "1", "1"],		["300", [3], "", -5, [["expression", "ZombieDistance=300;ZombieDistanceStat=true;ShieldMe=true;"]], "1", "1"],		["1500", [4], "", -5, [["expression", "ZombieDistance=1500;ZombieDistanceStat=true;ShieldMe=true;"]], "1", "1"],		["20000", [5], "", -5, [["expression", "ZombieDistance=20000;ZombieDistanceStat=true;ShieldMe=true;"]], "1", "1"],			["Exit", [13], "", -3, [["expression", "ZombieDistanceStat=false;ShieldMe=false;"]], "1", "1"]		];	showCommandingMenu "#USER:zombieDistanceScreen";	WaitUntil{ZombieDistanceStat; ShieldMe;};	titleText [format["Zombie shield activated with distance %1 meters!",ZombieDistance],"PLAIN DOWN"]; titleFadeOut 4;} else {	ShieldMe = false; ZombieDistanceStat=false;};while {ShieldMe && ZombieDistanceStat} do {	_pos = getPos player;	_zombies = _pos nearEntities ["zZombie_Base",ZombieDistance];	_count = count _zombies;	for "_i" from 0 to (_count -1) do	{ 		_zombie = _zombies select _i;		deletevehicle _zombie;		RandomHeadshots=round(random 4);		if (!alive _zombie) then {			zombiekills = player getVariable["zombieKills",0];			If (RandomHeadshots==1) then {				_headShots = player getVariable["headShots",0];				player setVariable["headShots",_headShots+1,true]			};		};	};};If (!ShieldMe || !ZombieDistanceStat) then {	ShieldMe = false; ZombieDistanceStat=false;	titleText ["Zombie shield deactivated!","PLAIN DOWN"]; titleFadeOut 4;};